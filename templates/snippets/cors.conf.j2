if ( $request_method !~ ^(GET|POST|HEAD|OPTIONS|PUT|PATCH|DELETE)$ ) {
    return 444;
}

add_header 'Access-Control-Allow-Origin' '$http_origin' always;
add_header 'Access-Control-Allow-Methods' 'GET,POST,HEAD,OPTIONS,PUT,PATCH,DELETE' always;
add_header 'Access-Control-Allow-Headers' 'Origin,Accept,Authorization,Cache-Control,Content-Type,DNT,If-Modified-Since,Keep-Alive,Origin,User-Agent,X-Requested-With,If-Modified-Since,X-CSRF-TOKEN' always;
add_header 'Access-Control-Allow-Credentials' 'true' always;

## Required to be able to read Authorization header in frontend
#add_header 'Access-Control-Expose-Headers' 'Authorization' always;

if ($request_method = 'OPTIONS') {
  ## https://stackoverflow.com/questions/18450310/nginx-add-header-not-working
  add_header 'Access-Control-Allow-Origin' '$http_origin' always;
  add_header 'Access-Control-Allow-Methods' 'GET,POST,HEAD,OPTIONS,PUT,PATCH,DELETE' always;
  add_header 'Access-Control-Allow-Headers' 'Origin,Accept,Authorization,Cache-Control,Content-Type,DNT,If-Modified-Since,Keep-Alive,Origin,User-Agent,X-Requested-With,If-Modified-Since,X-CSRF-TOKEN' always;
  add_header 'Access-Control-Allow-Credentials' 'true' always;

  add_header 'Access-Control-Max-Age' 1728000;
  add_header 'Content-Type' 'text/plain; charset=UTF-8';
  add_header 'Content-Length' 0;
  return 204;
}

